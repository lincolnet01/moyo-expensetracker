{
  "name": "moyo-expensetracker",
  "version": "1.0.0",
  "private": true,
  "description": "Expense tracking application for small business owners",
  "workspaces": ["client", "server"],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build --workspace=server && npm run build --workspace=client",
    "prisma:migrate": "npm run prisma:migrate --workspace=server",
    "prisma:seed": "npm run prisma:seed --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
